{
  "name": "Spearmint - Captura de Tela",
  "version": "1.3",
  "description": "Capturar imagem da aba atual.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Capturar a imagem da aba!"
  },
  "permissions": [
    "activeTab", "webNavigation", "tabs"
  ],
  "manifest_version": 2
}
